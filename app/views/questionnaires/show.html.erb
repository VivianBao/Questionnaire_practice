<h1>Questionnaires#show</h1>

<p><%= @questionnaire.name %></p>
<% @questionnaire.questions.each do |question|  %>
  <h3><%= question.subcategory.name %></h3>
  <p><%= question.question_text %></p>
  <% x = 0 %>
  <%= simple_form_for @empty_responses[x] do |f|%>
    <%= f.input :response_text,
            label: false,
            as: :check_boxes,
            # collection_wrapper_tag: 'div',
            # collection_wrapper_class: 'category-wrapper d-flex justify-content-center mb-3',
            # item_wrapper_class: 'category-counselor mx-3',
            # input_html: {class: 'category-selector'},
            collection: question.subcategory.traits.map {|trait| [trait.name, trait.name]}
    %>
  <% end %>
  <% x += 1 %>
<% end %>
